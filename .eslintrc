{
  "extends": "@lacussoft/standard",
  "env": {
    "shared-node-browser": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "arrow-body-style": "off",
    "no-underscore-dangle": "off"
  },
  "ignorePatterns": [
    "build",
    "dist/"
  ]
}
